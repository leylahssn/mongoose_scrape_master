<div class="container">
    <div class="row">
        <div class="col s12">
            <h1 style="text-align: center;font-family: cursive;color:black;background:white;"><strong>Scrape Wall Street
                    Journal</strong></h1>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <div id="articles" style="padding-right:3%; padding-top:2%">
                {{#each articles}}
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <button data-id={{@index}} id="save-article"
                            class="waves-effect waves-light btn orange darken-1"
                            style="padding: 5px 10px; float:right">Save</button>
                        <h4 style="color:white;" id="title-{{@index}}"><strong>{{this.title}}</strong></h4>
                        <a href="https://www.wsj.com/{{this.link}}" id="link-{{@index}}"
                            style="color: white">{{this.link}}</a>
                    </div>
                </div>
                {{#if this.excerpt}}
                <h5 id="excerpt-{{@index}}">{{this.excerpt}}</h5>
                {{/if}}
                {{/each}}

            </div>
        </div>
    </div>
</div>