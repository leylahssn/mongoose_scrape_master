<div class="container">
    <div class="row">
        <div class="col s12">
            <h1 style="text-align: center;font-family: cursive;color:black;background:white;"><strong>Saved
                    Articles</strong></h1>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div id="articles" style="padding-right:3%;">
                {{#each saved}}
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <button data-id={{this._id}} id="delete-article"
                            class="waves-effect waves-light btn orange darken-1" style="padding: 3px 6px; float:right;">
                            Delete</button>
                        <button data-id={{this._id}} id="note-comment"
                            class="waves-effect waves-light btn orange darken-1"
                            style="padding: 3px 6px; float:right; margin-right:.5%">Notes</button>
                        <h4><strong>{{this.title}}</strong></h4>
                        <a href="{{this.link}}" style="color:yellow">{{this.link}}</a>
                    </div>
                </div>
                {{#if this.excerpt}}
                <h5>{{this.excerpt}}</h5>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</div>